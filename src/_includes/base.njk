     <script>
  if (window.netlifyIdentity) {
    window.netlifyIdentity.on("init", (user) => {
      if (!user) {
        window.netlifyIdentity.on("login", () => {
          document.location.href = "/admin/";
        });
      }
    });
  }
</script>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const isSpanish = navigator.language.toLowerCase().startsWith("es");
    console.log("Browser language:", navigator.language); // Debug
    if (isSpanish) {
      document.querySelectorAll("[data-translate-es]").forEach((el) => {
        const translation = el.getAttribute("data-translate-es");
        if (translation) {
          el.textContent = translation;
        }
      });
    }
  });
</script>
